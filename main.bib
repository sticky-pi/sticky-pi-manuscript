	pages = {585--607},
	file = {Full Text PDF:/home/quentin/Zotero/storage/F9EVUED7/BASSET et al. - 2001 - Stratification and diel activity of arthropods in .pdf:application/pdf;Snapshot:/home/quentin/Zotero/storage/WVBAMLRR/2638786.html:text/html},
}

