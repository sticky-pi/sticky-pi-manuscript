	file = {Batista et al. - 2011 - Towards Automatic Classification on Flying Insects.pdf:/home/quentin/Zotero/storage/YX2DDJ2R/Batista et al. - 2011 - Towards Automatic Classification on Flying Insects.pdf:application/pdf;IEEE Xplore Abstract Record:/home/quentin/Zotero/storage/X5J7HFX5/6146999.html:text/html;Submitted Version:/home/quentin/Zotero/storage/2694IZW6/Batista et al. - 2011 - Towards Automatic Classification on Flying Insects.pdf:application/pdf},
