@article{cha_identification_2012,
	title = {Identification and {Field} {Evaluation} of {Fermentation} {Volatiles} from {Wine} and {Vinegar} that {Mediate} {Attraction} of {Spotted} {Wing} {Drosophila}, {Drosophila} suzukii},
