	pages = {20160256},
	file = {Full Text PDF:/home/quentin/Zotero/storage/KR2VQCRN/Bloch et al. - 2017 - Time is honey circadian clocks of bees and flower.pdf:application/pdf;Snapshot:/home/quentin/Zotero/storage/HN3CZ3GZ/rstb.2016.html:text/html},
}

@article{helm_two_2017,
	title = {Two sides of a coin: ecological and chronobiological perspectives of timing in the wild},
