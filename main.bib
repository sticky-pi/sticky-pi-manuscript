	note = {Publisher: The Company of Biologists Ltd
Section: From molecules to ecosystems: linking physiology to ecology},
	pages = {903--913},
	file = {Full Text PDF:/home/quentin/Zotero/storage/V2373PZQ/Combes et al. - 2012 - Linking biomechanics and ecology through predator–.pdf:application/pdf;Snapshot:/home/quentin/Zotero/storage/KXZZ4RCI/903.html:text/html},
