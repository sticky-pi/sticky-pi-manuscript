	language = {en},
	number = {7776},
	urldate = {2021-03-19},
	journal = {Nature},
	author = {Lazopulo, Stanislav and Lazopulo, Andrey and Baker, James D. and Syed, Sheyum},
	month = oct,
	year = {2019},
	note = {Number: 7776
Publisher: Nature Publishing Group},
	pages = {108--111},
	file = {Full Text PDF:/home/quentin/Zotero/storage/4WE5WKZ8/Lazopulo et al. - 2019 - Daytime colour preference in Drosophila depends on.pdf:application/pdf;Snapshot:/home/quentin/Zotero/storage/IK4AW3M5/s41586-019-1571-y.html:text/html},
