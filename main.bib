	pages = {2097--2102},
	file = {Full Text PDF:/home/quentin/Zotero/storage/LWJMGKVF/Vinne et al. - 2019 - Maximising survival by shifting the daily timing o.pdf:application/pdf;Snapshot:/home/quentin/Zotero/storage/5KV6Y89X/ele.html:text/html},
